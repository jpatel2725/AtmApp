<Window x:Class="AtmApp.AccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Account" Height="350" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Name="AccountInfoTextBlock" Width="200" Margin="10"/>
            <Button Name="CheckBalanceButton" Content="Check Balance" Width="200" Margin="10" Click="CheckBalanceButton_Click"/>
            <Button Name="DepositButton" Content="Deposit" Width="200" Margin="10" Click="DepositButton_Click"/>
            <Button Name="WithdrawButton" Content="Withdraw" Width="200" Margin="10" Click="WithdrawButton_Click"/>
            <Button Name="DisplayTransactionsButton" Content="Display Transactions" Width="200" Margin="10" Click="DisplayTransactionsButton_Click"/>
            <Button Name="ExitButton" Content="Exit" Width="200" Margin="10" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
