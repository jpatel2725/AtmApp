<Window x:Class="AtmApp.SelectAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AtmApp"
        Title="Select Account" Height="350" Width="400">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBox Name="AccountNumberTextBox" Width="200" Margin="10" Height="30" local:WatermarkService.Watermark="Account Number"/>
            <Button Name="SelectButton" Content="Select" Width="200" Margin="10"  Click="SelectButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
